{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "windows": {
                "command": "powershell",
                "args": [
                    "-Command",
                    "& '${config:idf.espIdfPath}\\export.ps1'; idf.py build"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "source ${config:idf.espIdfPath}/export.sh && idf.py build"
                ]
            },
